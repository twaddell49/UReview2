%h2 Details about #{@game.title}

%u1#details
	%li
		ESRB:
		= @game.esrb
	%li
		Released on:
		= @game.release_date.strftime("%B %d, %Y")
	%li
		Players:
		= @game.players
	%li
		Genre:
		= @game.genre
	%li
		Console:
		= @game.console

%h3 Description:

%p#description= @game.description

= link_to 'Edit info', edit_game_path(@game)
= button_to 'Delete', game_path(@game), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to Games', games_path